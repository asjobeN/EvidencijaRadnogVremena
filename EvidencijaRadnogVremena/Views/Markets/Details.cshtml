@model EvidencijaRadnogVremena.Models.Market

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-6"><h2>Detalji marketa</h2></div>
    <div class="col-6">
        <span class="float-right">
            @Html.ActionLink(" Povratak na listu marketa", "Index", "", new { @class = "btn btn-secondary fa fa-undo" })
        </span>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SifraMarketa)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SifraMarketa)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Adresa)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Adresa)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Naziv)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Naziv)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PonedeljakRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PonedeljakRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.UtorakRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UtorakRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.SredaRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SredaRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.CetvrtakRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CetvrtakRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.PetakRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PetakRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.SubotaRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubotaRadnoVreme)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.NedeljaRadnoVreme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NedeljaRadnoVreme)
            </dd>
        </dl>
        @Html.ActionLink(" Izmeni", "Edit", new { id = Model.MarketId }, new { @class = "btn btn-success fa fa-pencil-square-o" })
    </div>


    <div class="col-md-8">
        <h4>Radnici</h4>
        <table class="table table-hover">
            @foreach (var item in Model.Radnici)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SifraRadnika)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImePrezime)
                    </td>
                    <td>
                        @Html.ActionLink(" Izmeni", "Edit", "Workers", new { id = item.RadnikId }, new { @class = "btn-sm btn-success fa fa-pencil-square-o" })
                        @Html.ActionLink("Detalji", "Details", "Workers", new { id = item.RadnikId }, new { @class = "btn-sm btn-info fa fa-list-alt" }) 
                        @Html.ActionLink("Obriši", "Delete", "Workers", new { id = item.RadnikId }, new { @class = "btn-sm btn-danger fa fa-trash-o" })
                    </td>
                </tr>
            }
        </table>
    </div>

</div>
