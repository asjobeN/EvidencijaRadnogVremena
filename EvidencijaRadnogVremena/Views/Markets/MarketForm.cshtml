@model EvidencijaRadnogVremena.Models.Market

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6"><h2>Detalji marketa</h2></div>
    <div class="col-6">
        <span class="float-right">
            @Html.ActionLink(" Povratak na listu marketa", "Index", "", new { @class = "btn btn-secondary fa fa-undo" })
        </span>
    </div>
</div>

@using (Html.BeginForm("Save", "Markets"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MarketId)

    <hr />

    @Html.ValidationSummary(true, "Molimo, ispravite navedene greške!", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.SifraMarketa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SifraMarketa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SifraMarketa, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Adresa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Dan", htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
        @Html.Label("Početak", htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
        @Html.Label("Kraj", htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
    </div>
    <div class="form-group row">
        @Html.Label("Ponedeljak", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.PonedeljakPocetakRadnogVremena, "{0: HH:mm}", new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.PonedeljakKrajRadnogVremena, "{0: c}", new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.PonedeljakPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.PonedeljakKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Utorak", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.UtorakPocetakRadnogVremena, @"{0: hh\:mm}", new { htmlAttributes = new { @class = "form-control", @value = "07:00", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.UtorakKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.UtorakPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.UtorakKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Sreda", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.SredaPocetakRadnogVremena, "{0:HH:mm}", new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.SredaKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.SredaPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.SredaKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Četvrtak", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.CetvrtakPocetakRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.CetvrtakKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.CetvrtakPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.CetvrtakKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Petak", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.PetakPocetakRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.PetakKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.PetakPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.PetakKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Subota", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.SubotaPocetakRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.SubotaKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.SubotaPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.SubotaKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Nedelja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.NedeljaPocetakRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.NedeljaKrajRadnogVremena, new { htmlAttributes = new { @class = "form-control", @type = "time", @step = "300" } })
        </div>
        <div class="col-md-6">
            @Html.ValidationMessageFor(model => model.NedeljaPocetakRadnogVremena, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.NedeljaKrajRadnogVremena, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" value="Sačuvaj" class="btn btn-primary btn-block" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
