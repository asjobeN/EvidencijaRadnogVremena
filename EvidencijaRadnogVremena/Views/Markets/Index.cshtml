@model IEnumerable<EvidencijaRadnogVremena.Models.Market>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-6"><h2>Spisak marketa</h2></div>
        <div class="col-6">
            <span class="float-right">
                @Html.ActionLink(" Dodaj novi market", "Create", "", new { @class = "btn btn-primary fa fa-plus" })
            </span>
        </div>
    </div>


        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SifraMarketa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adresa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Naziv)
                    </th>
                    <th>
                        Akcije
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SifraMarketa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Naziv)
                        </td>

                        <td>

                            @*<a href="@Url.Action("Edit", new { id = item.MarketId })" class="btn-sm btn-success">
                                <i class="fa fa-pencil-square-o"></i>
                                <span>
                                    <strong>Izmeni</strong>
                                </span>
                            </a>*@

                            @Html.ActionLink(" Izmeni", "Edit", new { id = item.MarketId }, new { @class = "btn-sm btn-success fa fa-pencil-square-o" })
                            @Html.ActionLink(" Detalji", "Details", new { id = item.MarketId }, new { @class = "btn-sm btn-info fa fa-list-alt" })
                            @Html.ActionLink(" Obriši", "Delete", new { id = item.MarketId }, new { @class = "btn-sm btn-danger fa fa-trash-o" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


