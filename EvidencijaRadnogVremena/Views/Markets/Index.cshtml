@model IEnumerable<EvidencijaRadnogVremena.Models.Market>

@{
    ViewBag.Title = "Index";
}

<h2>Spisak marketa</h2>

<p>
    @Html.ActionLink("Dodaj novi market", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.SifraMarketa }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.SifraMarketa }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.SifraMarketa })
        </td>
    </tr>
}

</table>
